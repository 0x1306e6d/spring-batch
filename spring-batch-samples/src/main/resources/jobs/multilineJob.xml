<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch" 
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/batch 
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd
       	http://www.springframework.org/schema/aop
 		http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<job id="multilineJob">
		<step name="step1">
			<tasklet reader="reader" writer="writer" commit-interval="1">
				<streams>
					<stream ref="fileItemReader"/>
				</streams>
			</tasklet>
		</step>
	</job>

	<beans:bean id="reader" class="org.springframework.batch.sample.domain.multiline.AggregateItemReader">
		<beans:property name="itemReader" ref="fileItemReader" />
	</beans:bean>

	<beans:bean id="writer" class="org.springframework.batch.item.file.FlatFileItemWriter">
		<beans:property name="resource" value="file:target/test-outputs/20070122.testStream.multilineStep.txt" />
		<beans:property name="lineAggregator">
			<beans:bean class="org.springframework.batch.item.file.transform.PassThroughLineAggregator"/>
		</beans:property>
	</beans:bean>

	<beans:bean id="fileItemReader"
		class="org.springframework.batch.item.file.FlatFileItemReader">
		<beans:property name="resource"
			value="classpath:data/multilineJob/input/20070122.teststream.multilineStep.txt" />
		<beans:property name="lineMapper">
			<beans:bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<beans:property name="lineTokenizer" ref="fixedFileDescriptor" />
				<beans:property name="fieldSetMapper">
					<beans:bean class="org.springframework.batch.sample.domain.multiline.AggregateItemFieldSetMapper">
						<beans:property name="delegate" ref="tradeLineMapper" />
					</beans:bean>
				</beans:property>
			</beans:bean>
		</beans:property>
	</beans:bean>

	<beans:bean id="tradeLineMapper"
		class="org.springframework.batch.sample.domain.trade.internal.TradeFieldSetMapper" />

	<beans:bean id="fixedFileDescriptor"
		class="org.springframework.batch.item.file.transform.PrefixMatchingCompositeLineTokenizer">
		<beans:property name="tokenizers">
			<beans:map>
				<beans:entry key="BEGIN" value-ref="beginRecordTokenizer" />
				<beans:entry key="END" value-ref="endRecordTokenizer" />
				<beans:entry key="" value-ref="tradeRecordTokenizer" />
			</beans:map>
		</beans:property>
	</beans:bean>

	<beans:bean id="beginRecordTokenizer"
		class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
		<beans:property name="columns" value="1-5" />
	</beans:bean>

	<beans:bean id="endRecordTokenizer"
		class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
		<beans:property name="columns" value="1-3" />
	</beans:bean>

	<beans:bean id="tradeRecordTokenizer"
		class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
		<beans:property name="names" value="ISIN,Quantity,Price,Customer" />
		<beans:property name="columns" value="1-12, 13-15, 16-20, 21-29" />
	</beans:bean>

</beans:beans>